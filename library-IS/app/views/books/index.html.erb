<h2>Books catalogue</h2>

<div>
  <% if current_user && current_user.librarian %>
    <p>
      <%= link_to "Add new book", new_book_path, class:"btn btn-danger" %>
    </p>
  <% end %>
  <p>
    <h3>Find a book</h3>
    <%= form_tag({controller: "search", action: "search_books"}, method: "post", class:"form", role: "search") do %>
      <div class="row">
			  <div class="form-group col-md-3">
    		  <label for="title">Title</label>
    		  <input type="text" class="form-control" name="title" placeholder="Title">
        </div>
      </div>
      <div class="row">
  		  <div class="form-group col-md-3">
    		  <label for="author">Author</label>
    		  <input type="text" class="form-control" name="author" placeholder="Author">
        </div>
      </div>
      <button type="submit" class="btn btn-default">Search</button>
    <% end %>
  </p>
  <p>
    <h3>Find a book by ISBN</h3>
    <%= form_tag({controller: "search", action: "search_books_by_isbn"}, method: "post", class:"form", role:"search") do %>
      <div class="row">
			  <div class="form-group col-md-3">
    		  <label for="ISBN">ISBN</label>
    		  <input type="text" class="form-control" name="isbn" placeholder="ISBN">
  		  </div>
      </div>

			<button type="submit" class="btn btn-default">Search by ISBN</button>
    <% end %>
  </p>
</div>

