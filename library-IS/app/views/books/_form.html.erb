<%= form_for(book) do |f| %>
  <% if book.errors.any? %>
    <div class="alert alert-danger">
      <% book.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :author %>
    <% if author %>
      <%= f.select :author,
        Author.all.collect{|a| [a.name, a.id]}, {include_blank: true, :selected => params[:id]},
        {:class => 'form-control select-author'} %>
   <% else %>
      <%= f.select :author,
        Author.all.collect{|a| [a.name, a.id]}, {include_blank: true}, {:class => 'form-control select-author' } %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', rows:'5' %>
  </div>
  <%= f.submit 'Save', class: 'btn btn-default' %>
<% end %>
