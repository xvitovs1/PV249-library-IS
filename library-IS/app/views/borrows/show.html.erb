<h2><%= @borrow.publication.book.title %></h2> by <%= @borrow.publication.book.author.name %>

<div>
  <p>ISBN: <%= @borrow.publication.ISBN %></p>
  <p>Borrowed on: <%= @borrow.borrow_date %></p>
  <p>Expected return date: <%= @borrow.expected_return_date %></p>
</div>

<% if @borrow.active? %>
  <%= link_to 'End this borrow', {controller: 'borrows', action: 'return', id: @borrow.id}, class: 'btn btn-danger'%>
  <%= link_to 'Prolong this borrow', {controller: 'borrows', action: 'prolong', id: @borrow.id}, class: 'btn btn-default'%>
<% else %>
  <p>Returned on: <%= @borrow.return_date %></p>
<% end %>
