<h2>New reader's account</h2>

<%= form_for(@reader) do |f| %>
  <% if @reader.errors.any? %>
    <div class="alert alert-danger">
      <% @reader.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :user %>
    <%= @user.email %>
  </div>
  <div class="form-group">
    <%= f.label :card_code %>
    <%= f.text_field :card_code, class: 'form-control' %>
  </div>
  <div>
    <%= f.submit 'Save', class: 'btn btn-default' %>
    <%= link_to 'Back', :back, class: 'btn btn-default'%>
  </div>
<% end %>
