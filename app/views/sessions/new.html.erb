<h2>Log in</h2>

<%= form_tag '/login' do %>

  <div class='form-group'>
    <label for='email'>Email</label>
    <%= text_field_tag :email, nil, class:'form_control', placeholder:'Email', type:'email' %>
  </div>

  <div class='form-group'>
    <label for='password'>Password</label>
    <%= password_field_tag :password, nil, class:'form_control', placeholder:'Password' %>
  </div>

  <%= submit_tag "Submit" %>

<% end %>
